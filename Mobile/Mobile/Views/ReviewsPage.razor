<ScrollView Orientation="ScrollOrientation.Vertical" HorizontalOptions="LayoutOptions.CenterAndExpand" BackgroundColor="Color.LightBlue">
    <StackLayout Orientation="StackOrientation.Vertical">
        @foreach (var review in Periods)
        {
            <ReviewCell Review="@review" />
        }
    </StackLayout>
</ScrollView>

@code
{
    public List<Review> Periods { get; } = new List<Review>();

    protected override void OnInitialized()
    {
        var date = DateTime.Today;
        for (int i = 0; i < 50; i++)
        {
            date = date.AddDays(-1);
            Periods.Add(new Review { StartDate = date, Entries = new List<Model.Entry>() });
        }
    }
}
