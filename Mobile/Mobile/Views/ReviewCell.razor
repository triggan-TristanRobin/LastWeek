<Frame BackgroundColor="Color.White" Margin="10">
    <TapGestureRecognizer OnTapped="Edit" />
    <StackLayout Orientation="StackOrientation.Horizontal" HorizontalOptions="LayoutOptions.CenterAndExpand" VerticalOptions="LayoutOptions.CenterAndExpand">

        <Label Text="@($"Review from {Review.StartDate.Date.ToString()}")"
               FontAttributes="FontAttributes.Bold"
               VerticalTextAlignment="TextAlignment.Center" />
        <Label Text="@(Review.Status.ToString())"
               FontAttributes="FontAttributes.Bold"
               VerticalTextAlignment="TextAlignment.Center" />
        @*<i class="fas fa-check"></i>*@
    </StackLayout>
</Frame>

<ModalContainer @ref="reviewDetailsDialog" OnClosed="OnDetailsClosed">
    <ReviewDetails Review="Review" />
</ModalContainer>

@code {
    ModalContainer reviewDetailsDialog;
    [Parameter]
    public Review Review { get; set; }

    void Edit()
    {
        Console.WriteLine("Clicked on review cell");
        reviewDetailsDialog.ShowDialog();
    }

    // NOTE: This method shouldn't be needed and is a temporary workaround
    public void OnDetailsClosed()
    {
        reviewDetailsDialog.FinishClosingDialog();
    }
}
