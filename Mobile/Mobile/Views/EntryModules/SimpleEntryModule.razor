<StackLayout>
    @foreach (var answer in Entry.Answers.Select((a, i) => new { Answer = a, Index = i }))
    {
        <Entry Placeholder="@Entry.Question" @bind-Text="@Entry.Answers[answer.Index]"/>
    }
    <Button OnClick="AddAnswer">Add</Button>
</StackLayout>

@code {
    [Parameter]
    public SimpleEntry Entry { get; set; }

    void AddAnswer()
    {
        Entry.Answers.Add(string.Empty);
    }
}